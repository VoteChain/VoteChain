{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "outDir": "./build",
    "rootDir": "./src",
    "types": []
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
